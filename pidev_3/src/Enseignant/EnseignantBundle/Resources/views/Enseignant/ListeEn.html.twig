{% extends '::template.html.twig' %}

    {% block body %}
        <section class="mainContent full-width clearfix coursesSection">
            {% block content %}
                {% block menu_sante %}
                    <section class="pageTitleSection">
                        <div class="container">
                            <div class="pageTitleInfo">
                                <h2>Education</h2>
                                <ol class="breadcrumb">
                                    <li><a href="">Accueil</a></li>
                                    <li class="active">mon espace</li>
                                </ol>
                            </div>
                        </div>
                    </section>
                {% endblock  %}
                <br>
                <br>
                <div class="container"  style="margin:auto ">

                    <div class="row">
                        <div class="col-xs-12" >
                            <div class="tabCommon">

                                <div class="sectionTitle text-center" style="font-size: small">

                                    <h2>

                                        <span class="shape shape-left bg-color-4"></span>
                                        <span> Mes profils
                                               </span>
                                        <span class="shape shape-right bg-color-4"></span>
                                    </h2>
                                </div>
                                <section class="mainContent full-width clearfix coursesSection">
                                    <div class="container">
                                        <div class="row">



                                                <div class="row">
                                                    {% for ligne in m %}
                                                        {% if app.user.id == ligne.iduser %}
                                                        <div class="col-md-4 col-sm-6 col-xs-12 block">

                                                            <div class="thumbnail thumbnailContent">
                                                                <img src="{{ asset('images/') }}{{ ligne.nomimage }}" alt="image" class="img-responsive" style="width: 400px;height: 200px;">
                                                                <div class="caption border-color-1">
                                                                    <h3><a href="=" class="color-1">{{ ligne.nom }} {{ ligne.prenom }}</a></h3>
                                                                    <ul class="list-inline" style="font-weight: bold">
                                                                        <li>{{ ligne.adresse }}</li><br>
                                                                        <li> {{ ligne.special }}</li>
                                                                    </ul>
                                                                    <p>{{ ligne.email }}<br>Numero de téléphone: {{ ligne.numtel }}<br>Prix par heure:<a style="font-weight: bold;color: #4cae4c;">{{ ligne.prix }}</a>  <br> Nbre d'heure de formation: <a style="font-weight: bold;color: #4cae4c;">{{ ligne.nbr }}</a> </p>
                                                                    <ul class="list-inline btn-yellow">
                                                                        <li><a href="{{ path('Liste3',{'id':ligne.id}) }}"class="btn btn-primary ">supprimer</a></li>
                                                                        <li><a href="{{ path('Liste5',{'id':ligne.id}) }}"class="btn btn-primary ">modifier</a></li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                        </div>
                                                            {% endif %}
                                                    {% endfor %}
                                                </div>



                                        </div>


                                    </div>
                                </section>


                            </div>
                        </div>
                    </div>
                </div>
                <br>
                <br>
            {% endblock %}
            {% block script1 %}
                {{ parent() }}
            {% endblock %}


</section>
{% endblock %}