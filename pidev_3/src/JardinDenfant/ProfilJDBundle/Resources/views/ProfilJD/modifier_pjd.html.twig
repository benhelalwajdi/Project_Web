{% extends "template.html.twig" %}



{% block body %}
    {{ form_start(form) }}
    <br>
    <br>
    <br>
    <div class="panel panel-default formPanel ">
    <div class="panel-heading bg-color-1 border-color-1 not-rounded">
        <h3 class="panel-title">modifier mon jardin </h3>
    </div>
    <br>
    <div class="row">
        <div class="col-sm-6 col-xs-12">
            <div class="homeContactContent">


                <div class="form-group">

                    {{ form_widget(form.numauth, { 'attr': {'class': "form-control border-color-1",
                        'placeholder': 'numero authorisation'|trans} }) }}
                </div>
                <div class="form-group">

                    {{ form_widget(form.nomJD, { 'attr': {'class': "form-control border-color-2",
                        'placeholder': 'nom jardin '|trans} }) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.num, { 'attr': {'class': "form-control border-color-3",
                        'placeholder': 'numero '|trans} }) }}
                </div>
                <div class="form-group">

                    {{ form_widget(form.adresse, { 'attr': {'class': "form-control border-color-5",
                        'placeholder': 'adresse'|trans} }) }}
                </div>


            </div>
        </div>
        <div class="col-sm-6 col-xs-12">
            <div class="homeContactContent">


                <div class="form-group">
                    {{ form_widget(form.description, { 'attr': {'class': "form-control border-color-4",
                        'placeholder': 'description '|trans} }) }}


                </div>

                <div class="form-group">
                    {{ form_widget(form.longitude, { 'attr': {'class': "form-control border-color-2",
                        'placeholder': 'longitude '|trans} }) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.latitude, { 'attr': {'class': "form-control border-color-4",
                        'placeholder': 'latitude '|trans} }) }}
                </div>



            </div>

        </div>
        <div >{{ form_widget(form.ok, { 'attr': {'class': "btn btn-primary btn-block bg-color-3 border-color-3"} }) }}</div>
        {{ form_end(form) }}
    </div>
{% endblock %}