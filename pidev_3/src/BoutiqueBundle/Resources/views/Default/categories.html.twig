{% extends 'template.html.twig' %}
    {% block body %}


<section class="mainContent full-width clearfix productSection">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-sm-7 col-xs-12">
                <div class="row">

                    {% for i in produit %}
                        <div class="col-md-3 col-xs-6">
                            <div class="box bg-color-1">
                                <div class="box-img border-color-1 text-center">

                                        <img src="{{ asset(i.image) }}" alt="image" class="img-responsive">


                                    <a data-toggle="modal" href="#pop" class="btn-block"><i class="fa fa-eye" aria-hidden="true"></i>Quick View</a>
                                </div>
                                <div class="box-info">
                                    <h4>{{ i.nom }} </h4>
                                    <div class="price">
                                        <span>{{ i.prix }}</span>
                                    </div>
                                    <a onclick="addToCart('{{ i.id }}')" class="btn btn-primary "><i class="fa fa-shopping-basket " aria-hidden="true"></i>Add to Cart</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
</div>
</div>
</div>
</div>
    </section>

{% endblock %}
{% block javascripts %}
    <script>
        function addToCart(id) {
            $.ajax({
                url: "http://localhost/pidev/web/app_dev.php/boutique/setSession/"+id,
                success: function(result){
                    var array=result.data;
                    for (i = 0; i < array.length; i++) {
                        console.log(array[i]);
                    }
                }}
            );
        }
    </script>

{% endblock %}
