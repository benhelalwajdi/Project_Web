{% include'::admin.html.twig' %}
 {% block body %}
     <html>
     <head>
         <title>Liste des Blagues</title>
         <script src="{{ asset('plugins/bootstrap/js/bootstrap.min.js')}}"></script>
         <link href="{{ asset('plugins/font-awesome/css/font-awesome.min.css') }} " rel="stylesheet">
         <link rel="stylesheet" type="text/css" href="{{ asset('plugins/rs-plugin/css/settings.css')}}" media="screen">
         <link rel="stylesheet" type="text/css" href="{{ asset('plugins/selectbox/select_option1.css')}}">
         <link rel="stylesheet" type="text/css" href="{{ asset('plugins/owl-carousel/owl.carousel.css')}}" media="screen">
         <link rel="stylesheet" type="text/css" href="{{ asset('plugins/isotope/jquery.fancybox.css')}} ">
         <link rel="stylesheet" type="text/css" href="{{ asset('plugins/isotope/isotope.css')}}">
         <link href="{{asset('css/style.css')}}" rel="stylesheet">

     </head>
     <body>
     <div class="main-panel">
         {% for flashMessage in app.session.flashbag.get('success') %}

             <div class="alert alert-success">
                 {{ flashMessage }}
             </div>
         {% endfor %}
         <div class="content">
             <div class="container-fluid">
                 <div class="row">
                     <div class="col-md-12">
                         <div class="card">
                             <div class="card-header" data-background-color="purple">
                                 <h4 class="title">Espace Administration des articles</h4>
                                 <p class="category">Liste des articles</p>
                             </div>
                             <div  class="card-content table-responsive">

                                 <table class="table" id="affichage">
                                     <thead class="text-primary">
                                     <th>Titre</th>
                                     <th>Date publication</th>
                                     <th>sujet</th>
                                     <th>image</th>
                                     <th>Coprs</th>
                                     <th >DÃ©tails</th>
                                     </thead>
                                     {% for article in articles %}
                                         <tbody>
                                         <tr>
                                             <td>{{ article.Titre }}</td>
                                             <td>{{ article.datepublication | date }}</td>
                                             <td> {{ article.Sujet }}</td>
                                             <td >
                                                 <div class="col-md-3 col-sm-6 col-xs-12 isotopeSelector charity" style="width: 100px">
                                                     <article class="">
                                                         <figure>
                                                             <img src='{{ asset('articles/' ~ article.image) }}' alt='image' class='img-rounded'>
                                                             <div class="overlay-background">
                                                                 <div class="inner"></div>
                                                             </div>
                                                             <div class="overlay">
                                                                 <a class="fancybox-pop" rel="portfolio-1" href="{{ asset('' ~ article.image) }}">
                                                                     <i class="fa fa-search-plus" aria-hidden="true"></i>
                                                                 </a>
                                                             </div>
                                                         </figure>
                                                     </article>
                                                 </div></td>
                                             <td>{{ article.body[:100]|raw}}....</td>

                                             <td><a href="{{ path('Detailarticleavalider',{'idarticle':article.idarticle}) }}"> Details</a>
                                             </td></tr>


                                         </tbody>
                                     {% endfor %}
                                 </table>
                                 <div >

                                 </div>
                             </div>

                     </div>

                 </div>
             </div>
         </div>

             {# display navigation #}
             <div class="navigation txt-center">
                 {{ knp_pagination_render(articles) }}
             </div>

     </div>
     <script src="{{ asset ('jquery-3.2.1.min.js') }}"></script>
     </div>
     </body>
     </html>

 {% endblock %}
