{% extends 'template.html.twig' %}
{% block body %}

    {% block content %}
        {% block menu_sante %}
            <section class="pageTitleSection">
                <div class="container">
                    <div class="pageTitleInfo">
                        <h2>Sant√©</h2>
                        <ol class="breadcrumb">
                            <li><a href="index-2.html">Accueil</a></li>
                            <li class="active">Mon espace</li>
                        </ol>
                    </div>
                </div>
            </section>
        {% endblock  %}
        <br>
        <br>
        <div class="container"  style="margin:auto ">

            <div class="row">
                <div class="col-xs-12" >
                    <div class="tabCommon">
                        <ul class="nav nav-tabs">
                            <li><a  href="{{ path('modifier_info',{'id': app.user.id }) }}" >Informations</a></li>
                            <li ><a href="{{ path('listerticlepersonnel',{'id': app.user.id }) }}" >Mes articles</a></li>
                            <li class="active"><a data-toggle="tab" >Ajouter article</a></li>
                            <li><a  href="{{ path('supprimercompte') }}">Supprimer compte</a></li>
                        </ul>
                        <div class="tab-content" style="width: 1200px; margin-right: 10px">
                            <div id="leftHome" class="tab-pane fade in active" style="margin-right: 10px">
                                <div class="media">
                                    <div class="container" >
                                        <div class="sectionTitle text-center" style="font-size: small">

                                            <h2>

                                                <span class="shape shape-left bg-color-4"></span>
                                                <span >     <a >Article</a></span>
                                                <span class="shape shape-right bg-color-4"></span>
                                            </h2>
                                        </div>

                                        <section class="mainContent full-width clearfix">
                                            <div class="container">


    {{ form_start(f) }}

                                                <div class="form-group formField">
                                                    {{ form_widget(f.titre, { 'attr': {'class': "form-control",
                                                        'placeholder': "Titre de l'article"|trans} }) }}
                                                </div>
                                                <div class="form-group formField">
                                                    {{ form_widget(f.sujet, { 'attr': {'class': "form-control",
                                                        'placeholder': "Sujet de l'article"|trans} }) }}
                                                </div>
                                                <div class="form-group formField">
                                                    {{ form_widget(f.body, { 'attr': {'class': "form-control",
                                                        'placeholder': "Corp de l'article"|trans} }) }}
                                                </div>

                                                    {{ form_widget(f.image) }}


                                                {{ form_end(f) }}

                                            </div>
                                        </section>


                                        <br>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <br>
        {% for message in app.flashes('success') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
    {% endblock %}
