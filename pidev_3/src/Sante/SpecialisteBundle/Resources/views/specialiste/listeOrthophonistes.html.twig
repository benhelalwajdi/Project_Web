{% extends 'template.html.twig' %}
{% block body %}

    {% block content %}
        {% block menu_sante %}
            <section class="pageTitleSection">
                <div class="container">
                    <div class="pageTitleInfo">
                        <h2>Santé</h2>
                        <ol class="breadcrumb">
                            <li><a href="index-2.html">Accueil</a></li>
                            <li class="active">Orthophoniste</li>
                        </ol>
                    </div>
                </div>
            </section>
        {% endblock  %}
        <br>
        <br>
        <div class="container"  style="margin:auto ">

            <div class="row">
                <div class="col-xs-12" >
                    <div class="tabCommon">

                        <div class="sectionTitle text-center" style="font-size: small">

                            <h2>

                                <span class="shape shape-left bg-color-4"></span>
                                <span> Orthophoniste
                                               </span>
                                <span class="shape shape-right bg-color-4"></span>
                            </h2>
                        </div>
                        <section class="mainContent full-width clearfix coursesSection">
                            <div class="container">
                                <div class="row">

                                    <div class="col-md-9 col-sm-8 col-xs-12 pull-right">

                                        <div class="row">
                                            {% for pediatres in pediatres %}
                                                <div class="col-md-4 col-sm-6 col-xs-12 block">

                                                    <div class="thumbnail thumbnailContent">
                                                        <a href="{{ path('detailMedecin', {'cin':pediatres.cin}) }}"><img src="{{ asset('' ~ pediatres.image) }}" alt="image" class="img-responsive"></a>
                                                        <div class="caption border-color-1">
                                                            <h3><a href="{{ path('detailMedecin', {'cin':pediatres.cin}) }}" class="color-1">{{ pediatres.nom }} {{ pediatres.prenom }}</a></h3>
                                                            <ul class="list-inline" style="font-weight: bold">
                                                                <li>{{ pediatres.municipalite }}</li>
                                                                <li>{{ pediatres.gouvernorat }} </li>
                                                            </ul>
                                                            <p> {{ pediatres.description }} <br> Note: <a style="font-weight: bold;color: #4cae4c;">{{ pediatres.rating }}</a>  </p>
                                                            <ul class="list-inline btn-yellow">
                                                                <li><a href="{{ path('detailMedecin', {'cin':pediatres.cin}) }}" class="btn btn-link"><i class="fa fa-angle-double-right" aria-hidden="true"></i> Details</a></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    </div>

                                    <div class="col-md-3 col-sm-4 col-xs-12 pull-left">
                                        <aside>
                                            <div class="panel panel-default courseSidebar">
                                                <div class="panel-heading bg-color-1 border-color-1">
                                                    <h3 class="panel-title">Recherche</h3>
                                                </div>
                                                <div class="panel-body">
                                                    <div class="form-group formField">
                                                        <div class="dropGeneral roundOne">
                                                            <form method="post">
                                                                <select name="gouv" class="form-control">
                                                                    <option disabled selected >-- Gouvernorat --</option>
                                                                    <option value="Ariana" >Ariana</option>
                                                                    <option value="Béja">Béja</option>
                                                                    <option value="Ben Arous">Ben Arous</option>
                                                                    <option value="Bizerte">Bizerte</option>
                                                                    <option value="Gabès">Gabès</option>
                                                                    <option value="Gafsa">Gafsa</option>
                                                                    <option value="Jendouba">Jendouba</option>
                                                                    <option value="Kairouan">Kairouan</option>
                                                                    <option value="Kasserine">Kasserine</option>
                                                                    <option value="Kébili">Kébili</option>
                                                                    <option value="Le Kef">Le Kef</option>
                                                                    <option value="Mahdia">Mahdia</option>
                                                                    <option value="La Manouba">La Manouba</option>
                                                                    <option value="Médenine">Médenine</option>
                                                                    <option value="Monastir">Monastir</option>
                                                                    <option value="Nabeul">Nabeul</option>
                                                                    <option value="Sfax">Sfax</option>
                                                                    <option value="Sidi Bouzid">Sidi Bouzid</option>
                                                                    <option value="Siliana">Siliana</option>
                                                                    <option value="Sousse">Sousse</option>
                                                                    <option value="Zaghouan">Zaghouan</option>
                                                                    <option value="Tataouine">Tataouine</option>
                                                                    <option value="Tozeur">Tozeur</option>
                                                                    <option value="Tunis">Tunis</option>
                                                                    <option value="autre">Autre</option>

                                                                </select>
                                                                <input type="text" class="form-control" placeholder="nom"  name="nom">
                                                                <input type="text" class="form-control" placeholder="prenom" aria-describedby="basic-addon2" name="prenom">
                                                                <div style="margin-right: 0px;"><input class="btn btn-warning " type="submit" value="Chercher"></div>                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                                </br>
                                                <div class="panel panel-default courseSidebar">
                                                    <div class="panel-heading bg-color-2 border-color-2">
                                                        <h3 class="panel-title">Nos spécialistes</h3>
                                                    </div>
                                                    <div class="panel-body">
                                                        <ul class="list-unstyled categoryItem">
                                                            <li><a href="{{ path('ListePediatres') }}">Pédiatres</a></li>
                                                            <li><a style="color:#449d44;font-weight: bold">Orthophonistes</a></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </aside>
                                    </div>
                                </div>
                                {# display navigation #}
                                <div class="pagerArea text-center">
                                    {{ knp_pagination_render(pediatres) }}
                                </div>

                            </div>
                        </section>


                    </div>
                </div>
            </div>
        </div>
        <br>
        <br>
    {% endblock %}
    {% block script1 %}
        {{ parent() }}
    {% endblock %}
{% endblock %}
